{
  "rules": {
    "appInfo": {
      ".write": "auth != null",
      ".read": true
    },
    "users":{
    	"$user_id": {
        ".write": "$user_id === auth.uid",
      	".read": "$user_id === auth.uid"
      }
    },
    "files":{
    	"$user_id": {
        ".write": "$user_id === auth.uid",
      	".read": "$user_id === auth.uid"
      }
    }
  }
}